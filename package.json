{
  "name": "leaflet-path-drag",
  "version": "2.0.2",
  "description": "Drag functionality for Leaflet vector layers",
  "scripts": {
    "build": "npm run build:iife && npm run build:esm && npm run build:umd",
    "build:iife": "rollup -c rollup.config.iife.js",
    "build:esm": "rollup -c rollup.config.esm.js",
    "build:umd": "rollup -c rollup.config.umd.js"
  },
  "type": "module",
  "main": "./dist/leaflet_path_drag.umd.js",
  "module": "./dist/leaflet_path_drag.esm.js",
  "exports": {
    "import": "./dist/leaflet_path_drag.esm.js",
    "require": "./dist/leaflet_path_drag.umd.js"
  },
  "file": "dist/leaflet_path_drag.iife.js",
  "files": [
    "dist/",
    "leaflet-path-drag.js"
  ],
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MrRedBeard/Leaflet.Path.Drag.git"
  },
  "keywords": [
    "leaflet",
    "path",
    "polyline",
    "drag",
    "polygon"
  ],
  "author": "MrRedBeard and Alexander Milevski <info@w8r.name>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MrRedBeard/Leaflet.Path.Drag/issues"
  },
  "homepage": "https://github.com/MrRedBeard/Leaflet.Path.Drag/",
  "dependencies": {
    "leaflet": "^1.9.4",
    "vite": "^7.0.4"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "rollup": "^4.45.0",
    "rollup-plugin-node-polyfills": "^0.2.1"
  }
}
